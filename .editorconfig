root = true
[*.py]
charset = utf-8
indent_size = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

"[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
}